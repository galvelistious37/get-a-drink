<%- include("partials/header.ejs") %>

<div class="container col-xxl-8 px-4 pt-5 pb-2">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5 tanBack rounded-2 justify-content-lg-start justify-content-center">
      <!-- Image -->
      <div class="col-10 col-sm-8 col-lg-6">
        <img 
          src="<%-drink.strDrinkThumb%>" 
          class="d-block mx-lg-auto img-fluid rounded-2" 
          alt="drink image" 
          width="700" height="500" loading="lazy" />
      </div>
      <!-- Name, ingredients, and instructions -->
      <div class="col-lg-6 tanBack justify-content-lg-start justify-content-center">
        <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-5 customFont"><%= drink.strDrink%></h1>
        <ul>
            <% ingredients.forEach((ingredient) => { %>
              <li><%= ingredient.ingredient %> <%= ingredient.amount %></li>
            <% }) %>
        </ul>
        <p class="lead"><%= drink.strInstructions %></p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
          <button 
            type="button" 
            class="btn btn-dark btn-lg px-4 me-md-2" 
            onclick="location.href='/'">Get A Drink!
          </button>
        </div>
      </div>
    </div>
  </div>

<%- include("partials/footer.ejs") %>